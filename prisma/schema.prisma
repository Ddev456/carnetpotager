// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Plants {
    id              Int   @id @default(autoincrement())
    createdAt       DateTime @default(now())
    thumbnail       String? @db.Text
    name            String
    category        String?
    family          String?
    gender          String?
    wikipedia       String?
    seedling        String?
    nursery         String?
    plantation      String?
    flowering       String?
    harvesting      String?
    harvest         String?
    exposition      String?
    seedlingInfo    String[]
    cultureInfo     String[]
    harvestInfo     String[]
    water           Int?
    spaceBetween    Int?
    spaceOnRow      Int?
    seedMinTemp     Int?
    seedMaxTemp     Int?
    seedDepth       Int?
    emergence       Int?
    optimalTemp     Int?
    hardiness       Int?
    nitrogenN       Int?
    phosphorusP     Int?
    potassiumK      Int?
    level           Int?
    efficiency      Int?
    conservation    Int?
    isHardiness     Boolean?
    nativesEvent    NativesEvents?
}

model NativesEvents {
    id                  String @id @default(cuid())
    Plant               Plants   @relation(fields: [plantId], references: [id])
    plantId             Int         @unique
    nursery             Int[]
    seedling            Int[]
    transplanting       Int[]
    thinning            Int[]
    plantation          Int[]
    harvest             Int[]
}